#include <stdio.h>

void update(int *a,int *b) {
    int sum,dif;
    sum=*a+*b;
    dif=*a-*b;
    if(*a<*b)
    {
        printf("%d\n",sum);
        printf("%d\n",-dif);
    }
    else if (*a>*b)
    {
        printf("%d\n",sum);
        printf("%d\n",dif);
    }
       
}

int main() {
    int a, b;
    int *pa = &a, *pb = &b;
    
    scanf("%d %d", &a, &b);
    update(pa, pb);

    return 0;
}
